<section class="gh-canvas">
    <GhCanvasHeader class="gh-canvas-header post-header">
        <h2 class="gh-canvas-title" data-test-screen-title>Push Messages</h2>
        <section class="view-actions">
            <div class="gh-contentfilter">
                {{#power-select
                    selected=selectedType
                    options=availableTypes
                    searchEnabled=false
                    onchange=(action "changeType")
                    tagName="div"
                    classNames=typeClassNames
                    triggerClass="gh-contentfilter-menu-trigger"
                    dropdownClass="gh-contentfilter-menu-dropdown"
                    matchTriggerWidth=false
                    data-test-type-select=true
                    as |type|
                }}
                    {{type.name}}
                {{/power-select}}

                {{#power-select
                    selected=selectedOrder
                    options=availableOrders
                    searchEnabled=false
                    onchange=(action "changeOrder")
                    tagName="div"
                    classNames="gh-contentfilter-menu gh-contentfilter-sort"
                    triggerClass="gh-contentfilter-menu-trigger"
                    dropdownClass="gh-contentfilter-menu-dropdown"
                    matchTriggerWidth=false
                    data-test-order-select=true
                    as |order|
                }}
                    {{order.name}}
                {{/power-select}}
            </div>

            {{#link-to "push-messages.new" class="gh-btn gh-btn-green" data-test-new-push-message-button=true}}<span>New push message</span>{{/link-to}}
        </section>
    </GhCanvasHeader>

    <section class="content-list">
        <ol class="posts-list gh-list {{unless pushMessagesInfinityModel "no-posts"}}">
            {{#if pushMessagesInfinityModel}}
                <li class="gh-list-row header">
                    <div class="gh-list-header">Title</div>
                    <div class="gh-list-header">Status</div>
                    <div class="gh-list-header">Created At</div>
                    <div class="gh-list-header">Updated At</div>
                    <div class="gh-list-header no-padding">{{!--Chevron column: no header--}}</div>
                </li>
            {{/if}}

            {{#each pushMessagesInfinityModel as |pushMessage|}}
                {{gh-push-message-list-item
                    pushMessage=pushMessage
                    data-test-push-message-id=pushMessage.id}}
            {{else}}
                <li class="no-posts-box">
                    <div class="no-posts">
                        {{#if showingAll}}
                            {{svg-jar "posts-placeholder" class="gh-posts-placeholder"}}
                            <h3>You have no push messages yet!</h3>
                        {{else}}
                            <h3>No push messages match the current filter</h3>
                            {{#link-to "push-messages" (query-params type=null) class="gh-btn gh-btn-lg"}}
                                <span>Show all push messages</span>
                            {{/link-to}}
                        {{/if}}
                    </div>
                </li>
            {{/each}}
        </ol>

        {{gh-infinity-loader
            infinityModel=pushMessagesInfinityModel
            scrollable=".gh-main"
            triggerOffset=1000}}
    </section>

    {{outlet}}
</section>